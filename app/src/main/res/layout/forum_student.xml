<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <ImageView
        android:id="@+id/img_FView"
        android:layout_width="50dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        tools:ignore="HardcodedText"
        android:outlineAmbientShadowColor="#FF0000"
        android:outlineSpotShadowColor="#FF0000"
        app:srcCompat="@drawable/baseline_eco_black_36dp"
        />



    <TextView
        android:id="@+id/display_FName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/state_Icon_View"
        android:layout_toRightOf="@+id/state_Icon_View"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/display_answer"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/state_Icon_View"
        android:layout_toRightOf="@+id/state_Icon_View"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/display_quetionNo"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/state_Icon_View"
        android:layout_toRightOf="@+id/state_Icon_View"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />



</LinearLayout>